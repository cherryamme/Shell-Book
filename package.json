{
  "name": "shellhero",
  "publisher": "cherryamme",
  "displayName": "Shell Hero",
  "description": "增强shell脚本开发体验，自定义指令，快速执行",
  "version": "0.0.2",
  "icon": "icon.png",
  "repository": {
		"type": "git",
		"url": "https://github.com/cherryamme/Shell-Hero.git"
	},
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:shellscript",
    "workspaceContains:**/*.sh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.quickPickCommand",
        "title": "quickPickCommand"
      }
    ],
    "configuration": {
      "title": "jc.jc",
      "properties": {
        "extension.customCommands": {
          "type": "array",
          "default": [
            {
              "label": "watch -n 1 'qstat' ",
              "description": "监控qstat任务"
            },
            {
              "label": "ls",
              "description": "列出当前目录",
              "picked": false
            },
            {
              "label": "echo test",
              "description": "测试命令",
              "picked": true
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Command label"
              },
              "description": {
                "type": "string",
                "description": "Command description"
              },
              "picked": {
                "type": "boolean",
                "description": "run or paste command"
              }
            },
            "required": [
              "label"
            ]
          },
          "description": "Custom commands for the quick pick"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}
