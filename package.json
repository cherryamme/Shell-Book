{
  "name": "shellbook",
  "publisher": "cherryamme",
  "displayName": "Shell Book",
  "description": "让你的shell脚本向notebook一样好用，显示codechunk，添加snippets，增强shell脚本开发体验，快速执行自定义指令",
  "version": "0.0.7",
  "icon": "icon.png",
  "repository": {
		"type": "git",
		"url": "https://github.com/cherryamme/Shell-Book.git"
	},
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "files": [
    "functions.sh"
  ],
  "activationEvents": [
    "onLanguage:shellscript",
    "workspaceContains:**/*.sh"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shellbook.quickPickCommand",
        "title": "quickPickCommand"
      }
    ],
    "configuration": {
      "title": "shellbook",
      "properties": {
        "shellbook.qsubCommandFormat": {
          "type": "string",
          "default": "echo -e '${code}' | qsub -cwd -l vf=1G,p=1 -P B2C_RDS -S /bin/bash -q b2c_rd_s1.q -N ${title}",
          "description": "Customize the format for the qsub command.${code} is code chunk,${title} is code chunk title after chunkstart."
      },
        "shellbook.chunkFormat": {
          "type": "array",
          "default": [
              { "id": 1,"start": "###", "end": "###" },
              { "id": 2,"start": "stepon", "end": "stepoff" }
          ],
          "description": "Definite Chunk style for the extension."
      },
        "shellbook.customCommands": {
          "type": "array",
          "default": [
            {
              "label": "🤣监控qstat任务",
              "description": "watch -n 1 'qstat' ",
              "picked": true
            },
            {
              "label": "😆查看SGE任务",
              "description": "qstat -F p,vf  -q b2c_rd_s1.q |less",
              "picked": true
            },
            {
              "label": "🤐统计当前目录存储大小",
              "description": "du -sh .",
              "picked": true
            },
            {
              "label": "🔍 Find Files",
              "description": "find . -type f -name \"*.txt\"",
              "picked": false
            },
            {
              "label": "📁 List Directories",
              "description": "ls -l | grep '^d'",
              "picked": true
            },
            {
              "label": "📈 Check Disk Space",
              "description": "df -h",
              "picked": true
            },
            {
              "label": "🔑 SSH into Server",
              "description": "ssh user@server",
              "picked": false
            },
            {
              "label": "📝 Create a File",
              "description": "touch test.txt",
              "picked": true
            },
            {
              "label": "📂 Compress Directory",
              "description": "tar -czvf archive.tar.gz directory/",
              "picked": false
            },
            {
              "label": "📁 Extract Archive",
              "description": "tar -xzvf archive.tar.gz",
              "picked": false
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Command label"
              },
              "description": {
                "type": "string",
                "description": "Command description"
              },
              "picked": {
                "type": "boolean",
                "description": "run or paste command"
              }
            },
            "required": [
              "label"
            ]
          },
          "description": "Custom commands for the quick pick"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}
